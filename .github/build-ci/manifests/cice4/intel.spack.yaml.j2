spack:
  specs:
  # package is defined in the workflows inputs.spack-manifest-data-pairs
  # And the intel_compilers are defined in the standard_definitions.json data file
  - '{{ package }}'
  packages:
    intel-oneapi-compilers:
      require:
        - '{{ oneapi_compiler }}'
    all:
      require:
        - '%access_oneapi'
        - 'target={{ target }}'
  concretizer:
    unify: false
  view: false
