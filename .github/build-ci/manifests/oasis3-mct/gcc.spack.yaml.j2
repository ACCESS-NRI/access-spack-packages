spack:
  specs:
  # package is defined in the workflows inputs.spack-manifest-data-pairs
  # And the gcc_compilers are defined in the standard_definitions.json data file
  # Test default (stable) and 5.2 (latest)
  - '{{ package }}'
  - '{{ package }}@5.2'
  packages:
    gcc:
      require:
        - '{{ gcc_compiler_ver }}'
    all:
      require:
        - '%access_gcc'
        - 'target={{ target }}'
  concretizer:
    unify: false
  view: false
