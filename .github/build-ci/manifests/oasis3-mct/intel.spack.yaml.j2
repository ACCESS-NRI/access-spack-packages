spack:
  specs:
  # package is defined in the workflows inputs.spack-manifest-data-pairs
  # And the intel_compilers are defined in the standard_definitions.json data file
  - '{{ package }}'
  - '{{ package }}@5.2'
  packages:
    intel-oneapi-compilers-classic:
      require:
        - '{{ intel_compiler_ver }}'
    all:
      require:
        - '%access_intel'
        - 'target={{ target }}'
  concretizer:
    unify: false
  view: false
